<body>

  <div class="slider-wrap">
    <div class="slider-track" id="track">
      <!-- 여기 이미지 5장 주소만 바꿔서 쓰면 됨 -->
      <img class="slide" src="https://imgur.com/HOzRARN.jpg" alt="img1">
      <img class="slide" src="https://imgur.com/d13mia8.jpg" alt="img2">
      <img class="slide" src="https://imgur.com/e1zo0W2.jpg" alt="img3">
      <img class="slide" src="https://imgur.com/HOzRARN.jpg" alt="img4">
      <img class="slide" src="https://imgur.com/d13mia8.jpg" alt="img5">
      <!-- ↑↑ 원하는 이미지 5장으로 교체하면 됨 -->
    </div>

    <div class="dots" id="dots">
      <span class="dot active" data-index="0"></span>
      <span class="dot" data-index="1"></span>
      <span class="dot" data-index="2"></span>
      <span class="dot" data-index="3"></span>
      <span class="dot" data-index="4"></span>
    </div>
  </div>

  <script>
    (function(){
      const track = document.getElementById('track');
      const imgs  = Array.from(track.querySelectorAll('.slide'));
      const dots  = Array.from(document.querySelectorAll('#dots .dot'));

      function scrollToImage(index){
        const img = imgs[index];
        if(!img) return;
        const trackRect = track.getBoundingClientRect();
        const imgRect   = img.getBoundingClientRect();
        const current   = track.scrollLeft;
        const target = current + (imgRect.left - trackRect.left) -
                       (trackRect.width - imgRect.width)/2;
        track.scrollTo({left:target, behavior:'smooth'});
      }

      function setActiveDot(index){
        dots.forEach((d,i)=>d.classList.toggle('active', i===index));
      }

      dots.forEach((dot,i)=>{
        dot.addEventListener('click',()=>{
          scrollToImage(i);
          setActiveDot(i);
        });
      });

      // 스크롤에 따라 현재 이미지에 가장 가까운 dot 활성화
      let ticking = false;
      track.addEventListener('scroll',()=>{
        if(ticking) return;
        ticking = true;
        requestAnimationFrame(()=>{
          const center = track.scrollLeft + track.clientWidth/2;
          let closest = 0;
          let minDiff = Infinity;
          imgs.forEach((img,i)=>{
            const mid = img.offsetLeft + img.offsetWidth/2;
            const diff = Math.abs(center - mid);
            if(diff < minDiff){
              minDiff = diff;
              closest = i;
            }
          });
          setActiveDot(closest);
          ticking = false;
        });
      });
    })();
  </script>

</body>
</html>
