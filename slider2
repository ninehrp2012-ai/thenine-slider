  <style>
    *{box-sizing:border-box;margin:0;padding:0}
    body{
      margin:0;
      background:#000;
      display:flex;
      justify-content:center;
      align-items:center;
      min-height:100vh;
    }

    .slider-wrap{
      width:95vw;          /* 화면 가로 95% */
      max-width:900px;
      padding:8px 0 18px;
      position:relative;
    }

    .slider-track{
      display:flex;
      gap:10px;            /* 이미지 사이 여백 */
      overflow-x:auto;
      scroll-behavior:smooth;
      scrollbar-width:none;       /* 파폭 */
    }
    .slider-track::-webkit-scrollbar{display:none;} /* 크롬 등 */

    .slide{
      flex:0 0 auto;
      height:200px;        /* 기본 높이 (필요하면 조정) */
      width:auto;
      border-radius:8px;
      display:block;
      object-fit:cover;    /* 이미지 비율 유지하면서 적당히 채우기 */
      background:#000;
    }

    .dots{
      margin-top:8px;
      text-align:center;
    }
    .dot{
      display:inline-block;
      width:8px;
      height:8px;
      border-radius:50%;
      background:rgba(255,255,255,.3);
      margin:0 4px;
      cursor:pointer;
    }
    .dot.active{
      background:#ffcc33;
    }
  </style>
